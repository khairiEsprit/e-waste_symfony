{% extends 'back/base.html.twig' %}

{% block title %}Poubelle{% endblock %}

{% block content %}
    <div class="container-fluid py-4">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <div class="d-flex justify-content-between align-items-center">
                    <h1 class="h4 mb-0">
                        <i class="fas fa-trash-alt me-2"></i>Gestion des Poubelles
                    </h1>
                    <a href="{{ path('app_poubelle_new') }}" class="btn btn-success">
                        <i class="fas fa-plus-circle me-1"></i> Nouvelle Poubelle
                    </a>
                </div>
            </div>

            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover table-striped">
                        <thead class="table-light">
                            <tr>
                                <th>ID</th>
                                <th>Adresse</th>
                                <th>Niveau</th>
                                <th>État</th>
                                <th>Installation</th>
                                <th>Hauteur</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for poubelle in poubelles %}
                            <tr>
                                <td>{{ poubelle.id }}</td>
                                <td>{{ poubelle.adresse }}</td>
                                <td>
                                    <div class="progress" style="height: 20px; position: relative;">
                                        <div class="progress-bar 
                                            {% if poubelle.niveau > 80 %}bg-danger
                                            {% elseif poubelle.niveau > 50 %}bg-warning
                                            {% else %}bg-success{% endif %}" 
                                            role="progressbar" 
                                            style="width: {{ poubelle.niveau }}%" 
                                            aria-valuenow="{{ poubelle.niveau }}" 
                                            aria-valuemin="0" 
                                            aria-valuemax="100">
                                            <span class="progress-bar-label">{{ poubelle.niveau }}%</span>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <span class="badge 
                                        {% if poubelle.etat == 'Fonctionnelle' %}bg-success
                                        {% elseif poubelle.etat == 'En panne' %}bg-danger
                                        {% else %}bg-warning{% endif %}">
                                        {% if poubelle.etat == 'Fonctionnelle' %}
                                            <i class="fas fa-check-circle me-1"></i>
                                        {% elseif poubelle.etat == 'En panne' %}
                                            <i class="fas fa-exclamation-triangle me-1"></i>
                                        {% else %}
                                            <i class="fas fa-tools me-1"></i>
                                        {% endif %}
                                        {{ poubelle.etat }}
                                    </span>
                                </td>
                                <td>{{ poubelle.dateInstallation ? poubelle.dateInstallation|date('d/m/Y') : 'N/A' }}</td>
                                <td>{{ poubelle.hauteurTotale }} cm</td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a href="{{ path('app_poubelle_show', {'id': poubelle.id}) }}" 
                                           class="btn btn-primary" 
                                           title="Voir">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="{{ path('app_poubelle_edit', {'id': poubelle.id}) }}" 
                                           class="btn btn-warning" 
                                           title="Modifier">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="7" class="text-center py-4 text-muted">
                                    <i class="fas fa-info-circle fa-2x mb-2"></i><br>
                                    Aucune poubelle trouvée
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
            
            {% if poubelles|length > 5 %}
            <div class="card-footer bg-light">
                <div class="d-flex justify-content-between">
                    <div class="text-muted">
                        Affichage de {{ poubelles|length }} poubelles
                    </div>
                    <a href="{{ path('app_poubelle_new') }}" class="btn btn-sm btn-success">
                        <i class="fas fa-plus-circle me-1"></i> Ajouter
                    </a>
                </div>
            </div>
            {% endif %}
        </div>
    </div>
{% endblock %}