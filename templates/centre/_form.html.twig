{% extends 'back/base.html.twig' %}

{% block title %}Ajouter un Centre{% endblock %}

{% block content %}
    <h1 class="mb-4">Ajouter un Centre</h1>

    <div class="card p-4 shadow-sm">
        {{ form_start(form) }}
            <div class="mb-3">
                {{ form_row(form.nom, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="mb-3">
                {{ form_row(form.longitude, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="mb-3">
                {{ form_row(form.altitude, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="mb-3">
                {{ form_row(form.telephone, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="mb-3">
                {{ form_row(form.email, {'attr': {'class': 'form-control'}}) }}
            </div>
            <button class="btn btn-success w-100">{{ button_label|default('Enregistrer') }}</button>
        {{ form_end(form) }}
    </div>

    <a href="{{ path('app_centre_index') }}" class="btn btn-secondary mt-3">Retour Ã  la liste</a>
{% endblock %}
