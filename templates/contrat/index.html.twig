{% extends 'back/base.html.twig' %}

{% block title %}Liste des Contrats{% endblock %}

{% block content %}
<div class="container mt-5">
    <h1 class="mb-4">Liste des Contrats</h1>

    <div class="d-flex justify-content-end mb-3">
        <a href="{{ path('app_contrat_new') }}" class="btn btn-primary">
            <i class="bi bi-plus-lg"></i> Créer un Nouveau Contrat
        </a>
    </div>

    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Id</th>
                <th>Id Centre</th>
                <th>Id Employé</th>
                <th>Date Début</th>
                <th>Date Fin</th>
                <th>Signature</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for contrat in contrats %}
            <tr>
                <td>{{ contrat.id }}</td>
                <td>{{ contrat.centre.id }}</td>
                <td>{{ contrat.idEmploye }}</td>
                <td>{{ contrat.dateDebut ? contrat.dateDebut|date('Y-m-d') : '' }}</td>
                <td>{{ contrat.dateFin ? contrat.dateFin|date('Y-m-d') : '' }}</td>
                <td>{{ contrat.signaturePath }}</td>
                <td>
                    <a href="{{ path('app_contrat_show', {'id': contrat.id}) }}" class="btn btn-info btn-sm">
                        <i class="bi bi-eye"></i> Voir
                    </a>
                    <a href="{{ path('app_contrat_edit', {'id': contrat.id}) }}" class="btn btn-warning btn-sm">
                        <i class="bi bi-pencil"></i> Modifier
                    </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7" class="text-center">Aucun enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
