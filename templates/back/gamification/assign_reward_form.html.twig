{% extends 'back/base.html.twig' %}

{% block title %}Assign Reward{% endblock %}

{% block content %}
<!--begin::App Content Header-->
<div class="app-content-header">
    <!--begin::Container-->
    <div class="container-fluid">
        <!--begin::Row-->
        <div class="row">
            <div class="col-sm-6">
                <h3 class="mb-0">Assign Reward</h3>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-end">
                    <li class="breadcrumb-item"><a href="{{ path('back_dashboard') }}">Home</a></li>
                    <li class="breadcrumb-item"><a href="{{ path('admin_gamification_dashboard') }}">Gamification</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Assign Reward</li>
                </ol>
            </div>
        </div>
        <!--end::Row-->
    </div>
    <!--end::Container-->
</div>
<!--end::App Content Header-->

<!--begin::App Content-->
<div class="app-content">
    <!--begin::Container-->
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Assign Reward to User</h3>
                    </div>
                    <div class="card-body">
                        {{ form_start(form) }}
                            <div class="mb-3">
                                {{ form_label(form.user) }}
                                {{ form_widget(form.user) }}
                                {{ form_errors(form.user) }}
                            </div>
                            
                            <div class="mb-3">
                                {{ form_label(form.reward) }}
                                {{ form_widget(form.reward) }}
                                {{ form_errors(form.reward) }}
                                <small class="form-text text-muted">Optional: Select a specific reward to assign</small>
                            </div>
                            
                            <div class="mb-3">
                                {{ form_label(form.points) }}
                                {{ form_widget(form.points) }}
                                {{ form_errors(form.points) }}
                                <small class="form-text text-muted">Bonus points to award to the user</small>
                            </div>
                            
                            <div class="mb-3">
                                {{ form_label(form.notes) }}
                                {{ form_widget(form.notes) }}
                                {{ form_errors(form.notes) }}
                            </div>
                            
                            <div class="d-flex justify-content-between">
                                <a href="{{ path('admin_gamification_dashboard') }}" class="btn btn-secondary">Cancel</a>
                                <button type="submit" class="btn btn-primary">Assign Reward</button>
                            </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--end::Container-->
</div>
<!--end::App Content-->
{% endblock %}
