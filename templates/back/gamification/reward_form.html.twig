{% extends 'back/base.html.twig' %}

{% block title %}{{ isNew ? 'Create' : 'Edit' }} Reward{% endblock %}

{% block content %}
<!--begin::App Content Header-->
<div class="app-content-header">
    <!--begin::Container-->
    <div class="container-fluid">
        <!--begin::Row-->
        <div class="row">
            <div class="col-sm-6">
                <h3 class="mb-0">{{ isNew ? 'Create' : 'Edit' }} Reward</h3>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-end">
                    <li class="breadcrumb-item"><a href="{{ path('back_dashboard') }}">Home</a></li>
                    <li class="breadcrumb-item"><a href="{{ path('admin_gamification_dashboard') }}">Gamification</a></li>
                    <li class="breadcrumb-item active" aria-current="page">{{ isNew ? 'Create' : 'Edit' }} Reward</li>
                </ol>
            </div>
        </div>
        <!--end::Row-->
    </div>
    <!--end::Container-->
</div>
<!--end::App Content Header-->

<!--begin::App Content-->
<div class="app-content">
    <!--begin::Container-->
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">{{ isNew ? 'Create New' : 'Edit' }} Reward</h3>
                    </div>
                    <div class="card-body">
                        {{ form_start(form) }}
                            <div class="mb-3">
                                {{ form_label(form.name) }}
                                {{ form_widget(form.name) }}
                                {{ form_errors(form.name) }}
                            </div>
                            
                            <div class="mb-3">
                                {{ form_label(form.type) }}
                                {{ form_widget(form.type) }}
                                {{ form_errors(form.type) }}
                            </div>
                            
                            <div class="mb-3">
                                {{ form_label(form.pointsRequired) }}
                                {{ form_widget(form.pointsRequired) }}
                                {{ form_errors(form.pointsRequired) }}
                            </div>
                            
                            <div class="mb-3">
                                {{ form_label(form.description) }}
                                {{ form_widget(form.description) }}
                                {{ form_errors(form.description) }}
                            </div>
                            
                            <div class="mb-3">
                                {{ form_label(form.imageUrl) }}
                                {{ form_widget(form.imageUrl) }}
                                {{ form_errors(form.imageUrl) }}
                                <small class="form-text text-muted">URL to an image for this badge/reward</small>
                            </div>
                            
                            <div class="d-flex justify-content-between">
                                <a href="{{ path('admin_gamification_dashboard') }}" class="btn btn-secondary">Cancel</a>
                                <button type="submit" class="btn btn-primary">{{ isNew ? 'Create' : 'Update' }}</button>
                            </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--end::Container-->
</div>
<!--end::App Content-->
{% endblock %}
