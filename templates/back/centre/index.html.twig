{% extends 'back/base.html.twig' %}

{% block title %}Liste des Centres{% endblock %}

{% block content %}
<div class="container mt-5">
    <h1 class="mb-4">Liste des Centres</h1>

    <div class="d-flex justify-content-end mb-3">
        <a href="{{ path('app_centre_new') }}" class="btn btn-primary">
            <i class="bi bi-plus-lg"></i> Ajouter un Centre
        </a>
    </div>

    <div class="mb-3">
        <input type="text" id="searchInput" class="form-control" placeholder="Rechercher un centre...">
    </div>

    <table id="centreTable" class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Longitude</th>
                <th>Latitude</th>
                <th>Téléphone</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for centre in centres %}
                <tr>
                    <td>{{ centre.id }}</td>
                    <td>{{ centre.nom }}</td>
                    <td>{{ centre.longitude }}</td>
                    <td>{{ centre.altitude }}</td>
                    <td>{{ centre.telephone }}</td>
                    <td>{{ centre.email }}</td>
                    <td>
                        <a href="{{ path('app_centre_show', {'id': centre.id}) }}" class="btn btn-info btn-sm">
                            <i class="bi bi-eye"></i> Voir
                        </a>
                        <a href="{{ path('app_centre_edit', {'id': centre.id}) }}" class="btn btn-warning btn-sm">
                            <i class="bi bi-pencil"></i> Modifier
                        </a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="7" class="text-center">Aucun enregistrement trouvé</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>

<script>
    document.getElementById('searchInput').addEventListener('keyup', function () {
        let input = this.value.toLowerCase(); // texte tapé par l'utilisateur
        let rows = document.querySelectorAll('#centreTable tbody tr'); // toutes les lignes du tableau

        rows.forEach(function(row) {
            let text = row.textContent.toLowerCase();// contenu de la ligne
            row.style.display = text.includes(input) ? '' : 'none'; // on masque si pas trouvé
        });
    });
</script>
{% endblock %}
