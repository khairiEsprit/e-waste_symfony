{% extends 'back/base.html.twig' %}

{% block title %}Détails du Centre{% endblock %}

{% block content %}
    <h1>Centre</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ centre.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ centre.nom }}</td>
            </tr>
            <tr>
                <th>Longitude</th>
                <td>{{ centre.longitude }}</td>
            </tr>
            <tr>
                <th>Altitude</th>
                <td>{{ centre.altitude }}</td>
            </tr>
            <tr>
                <th>Téléphone</th>
                <td>{{ centre.telephone }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ centre.email }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_centre_index') }}" class="btn btn-secondary">Retour à la liste</a>
    <a href="{{ path('app_centre_edit', {'id': centre.id}) }}" class="btn btn-primary">Modifier</a>

    {{ include('back/centre/_delete_form.html.twig') }}
{% endblock %}
