{% extends 'front/base.html.twig' %}

{% block title %}Access Denied{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .access-denied-section {
            padding: 120px 0 60px;
            background: linear-gradient(rgba(0, 105, 62, 0.9), rgba(1, 50, 32, 0.9)), url('{{ asset('assets/front/assets/img/hero-bg.jpg') }}') fixed center center;
            background-size: cover;
            position: relative;
            min-height: 80vh;
            display: flex;
            align-items: center;
        }

        .access-denied-card {
            background: #fff;
            border-radius: 15px;
            box-shadow: 0 5px 30px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            transition: all 0.3s ease;
            text-align: center;
            padding: 50px;
            max-width: 800px;
            margin: 0 auto;
        }

        .access-denied-icon {
            font-size: 80px;
            color: #013220;
            margin-bottom: 20px;
        }

        .access-denied-title {
            font-size: 36px;
            font-weight: 700;
            color: #013220;
            margin-bottom: 15px;
        }

        .access-denied-message {
            font-size: 18px;
            color: #555;
            margin-bottom: 30px;
        }

        .access-denied-details {
            background: #f8f9fa;
            padding: 20px;

            border-radius: 10px;
            margin-bottom: 30px;
            text-align: left;
        }

        .return-btn {
            background: #013220;
            color: #fff;
            border: 2px solid #013220;
            padding: 12px 30px;
            border-radius: 50px;
            font-weight: 600;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-block;
        }

        .return-btn:hover {
            background: #00693E;
            color: #fff;
            transform: translateY(-3px);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        }

        .error-code {
            position: absolute;
            font-size: 200px;
            color: rgba(255, 255, 255, 0.05);
            font-weight: 900;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            z-index: -1;
        }

        @keyframes float {
            0% {
                transform: translateY(0px);
            }
            50% {
                transform: translateY(-20px);
            }
            100% {
                transform: translateY(0px);
            }
        }

        .floating-leaf {
            position: absolute;
            animation: float 6s ease-in-out infinite;
        }

        .leaf-1 {
            top: 20%;
            left: 10%;
            font-size: 30px;
            color: rgba(255, 255, 255, 0.3);
            animation-delay: 0s;
        }

        .leaf-2 {
            top: 60%;
            right: 10%;
            font-size: 40px;
            color: rgba(255, 255, 255, 0.2);
            animation-delay: 1s;
        }

        .leaf-3 {
            bottom: 10%;
            left: 20%;
            font-size: 35px;
            color: rgba(255, 255, 255, 0.25);
            animation-delay: 2s;
        }
    </style>
{% endblock %}

{% block body %}
<section class="access-denied-section">
    <div class="container" data-aos="fade-up">
        <div class="error-code">403</div>

        <div class="floating-leaf leaf-1">
            <i class="bi bi-tree"></i>
        </div>
        <div class="floating-leaf leaf-2">
            <i class="bi bi-tree"></i>
        </div>
        <div class="floating-leaf leaf-3">
            <i class="bi bi-tree"></i>
        </div>

        <div class="access-denied-card" data-aos="zoom-in" data-aos-delay="100">
            <div class="access-denied-icon">
                <i class="bi bi-shield-lock"></i>
            </div>

            <h1 class="access-denied-title">Access Denied</h1>
            <p class="access-denied-message">{{ message|default('Sorry, you don\'t have permission to access this page.') }}</p>

            <div class="access-denied-details">
                <p><strong style="color:#013220">Why am I seeing this?</strong></p>
                <p>You're trying to access a page that requires different permissions than what your account currently has.</p>
                <p>If you believe this is an error, please contact the administrator for assistance.</p>
            </div>

            <a href="{{ path(return_route) }}" class="return-btn">
                <i class="bi bi-arrow-left"></i> Return to Safe Zone
            </a>
        </div>
    </div>
</section>
{% endblock %}
