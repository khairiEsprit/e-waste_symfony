 <header id="header" class="fixed-top">
    <div class="container d-flex align-items-center">
        <div class="logo me-auto d-flex align-items-center">
            <a href="{{ path('front_home') }}" class="me-2">
                <img src="{{ asset('assets/front/assets/img/logo-landing.png') }}" alt="" class="img-fluid">
            </a>
            <h1><a href="{{ path('front_home') }}">E-WASTE</a></h1>
        </div>

        <nav id="navbar" class="navbar">
            <ul>
                <li><a class="nav-link scrollto active" href="#hero"><span class="fa fa-home"> Home </span></a></li>
                <li><a class="nav-link scrollto" href="#about"><span class="fa fa-info-circle" aria-hidden="true"> About us</span></a></li>
                <li><a class="nav-link scrollto" href="#"><span class="fa fa-trash"> Complain</span></a></li>
                <li><a class="nav-link scrollto" href="{{ path('chat') }}"><span class="fa fa-comment"> Chat </span></a></li>
                <li><a class="nav-link scrollto" href="{{ path('user_leaderboard') }}"><span class="fa fa-trophy"> Leaderboard </span></a></li>
                <li><a class="nav-link scrollto" href="#faq"><span class="fa fa-question-circle"> FAQ</span></a></li>

            {% if app.user %}
    <li class="dropdown">
        <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">
            {# Define the path to your local default placeholder image if the user has no Cloudinary image #}
            {% set defaultAvatarPath = 'images/default_avatar.png' %} {# <-- IMPORTANT: Change this to the actual path of your default avatar image within your public directory #}

            {# Check if the user has a Cloudinary profile image URL stored #}
            {% if app.user.profileImage %}
                {# Use the Cloudinary URL directly. DO NOT use asset() #}
                <img src="{{ app.user.profileImage }}"
                     alt="{{ app.user.firstName }}'s Avatar"
                     class="rounded-circle"
                     style="width: 40px; height: 40px; object-fit: cover;">
            {% else %}
                {# Use the local default avatar via the asset() function #}
                <img src="{{ asset(defaultAvatarPath) }}"
                     alt="Default Avatar"
                     class="rounded-circle"
                     style="width: 40px; height: 40px; object-fit: cover;">
            {% endif %}
        </a>
        <ul class="dropdown-menu dropdown-menu-end">
            <li class="dropdown-header">
                <h6>{{ app.user.firstName }}</h6>
                <small>{{ app.user.email }}</small>
            </li>
            <li><hr class="dropdown-divider"></li>
            <li><a class="dropdown-item" href="{{ path('app_profile') }}">Profile</a></li>
            <li><a class="dropdown-item" href="{{ path('user_rewards') }}">My Rewards</a></li>
            <li><a class="dropdown-item" href="{{ path('user_actions') }}">Submit Actions</a></li>
            <li><hr class="dropdown-divider"></li>
            <li><a class="dropdown-item" href="#">Dashboard</a></li>
            <li><a class="dropdown-item" href="#">My Reports</a></li>
            <li><hr class="dropdown-divider"></li>
            <li><a class="dropdown-item" href="{{ path('security_logout') }}">Logout</a></li>
        </ul>
    </li>
{% else %}
    <li><a class="nav-link scrollto" href="{{ path('security_login') }}">
        <button type="button" class="btn">
            <strong>LOGIN</strong>
            <div id="container-stars">
                <div id="stars"></div>
            </div>
            <div id="glow">
                <div class="circle"></div>
                <div class="circle"></div>
            </div>
        </button>
    </a></li>
{% endif %}
