{% extends 'front/base.html.twig' %}

{% block title %}Recycling Leaderboard{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card shadow-sm">
                <div class="card-header bg-success text-white">
                    <h3 class="mb-0">E-Waste Recycling Leaderboard</h3>
                </div>
                <div class="card-body">
                    <p class="lead text-center mb-4">Top recyclers in our community!</p>
                    
                    {% if app.user and userRank %}
                        <div class="alert alert-info">
                            <div class="d-flex align-items-center">
                                <div class="me-3">
                                    <i class="bi bi-trophy" style="font-size: 2rem;"></i>
                                </div>
                                <div>
                                    <strong>Your current rank: #{{ userRank }}</strong><br>
                                    Keep recycling to climb the leaderboard!
                                </div>
                            </div>
                        </div>
                    {% endif %}
                    
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Rank</th>
                                    <th>User</th>
                                    <th>Points</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for user in leaderboard %}
                                    <tr class="{{ app.user and app.user.id == user.id ? 'table-primary' : '' }}">
                                        <td>
                                            {% if loop.index == 1 %}
                                                <i class="bi bi-trophy-fill text-warning" style="font-size: 1.5rem;"></i>
                                            {% elseif loop.index == 2 %}
                                                <i class="bi bi-trophy-fill text-secondary" style="font-size: 1.5rem;"></i>
                                            {% elseif loop.index == 3 %}
                                                <i class="bi bi-trophy-fill text-danger" style="font-size: 1.5rem;"></i>
                                            {% else %}
                                                {{ loop.index }}
                                            {% endif %}
                                        </td>
                                        <td>
                                            <img src="{{ user.profileImage ?: asset('assets/back/assets/img/avatar.png') }}" 
                                                 class="rounded-circle me-2" 
                                                 alt="User Avatar" 
                                                 style="width: 35px; height: 35px;">
                                            {{ user.firstName }} {{ user.lastName }}
                                        </td>
                                        <td>{{ user.totalPoints }}</td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="3" class="text-center">No users on the leaderboard yet.</td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    
                    <div class="text-center mt-4">
                        <a href="{{ path('user_actions') }}" class="btn btn-primary">Submit Action</a>
                        {% if app.user %}
                            <a href="{{ path('user_rewards') }}" class="btn btn-success">View My Rewards</a>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
