{% extends 'front/base.html.twig' %}

{% block title %}Demande{% endblock %}

{% block body %}
<br><br>
<div class="container mt-5">
    <div class="title-container">
        <h1 class="main-title">Détails de la Demande</h1>
    </div>

    <div class="card custom-card">
        <div class="card-body">
            <h5 class="card-title type-badge">{{ demande.type }}</h5>
            <div class="info-container">
                <div class="info-item">
                    <div class="info-label">
                        <i class="fas fa-map-marker-alt"></i>
                        <span class="text-label">Adresse :</span>
                    </div>
                    <div class="info-content">{{ demande.adresse }}</div>
                </div>
                
                <div class="info-item">
                    <div class="info-label">
                        <i class="fas fa-envelope"></i>
                        <span class="text-label">Email utilisateur :</span>
                    </div>
                    <div class="info-content">{{ demande.emailUtilisateur }}</div>
                </div>

                <div class="info-item">
                    <div class="info-label">
                        <i class="fas fa-comment-alt"></i>
                        <span class="text-label">Message :</span>
                    </div>
                    <div class="info-content">{{ demande.message }}</div>
                </div>

                <div class="info-item">
                    <div class="info-label">
                        <i class="fas fa-info-circle"></i>
                        <span class="text-label">État :</span>
                    </div>
                    <div class="info-content">
                        {% set dernierTraitement = demande.traitements|last %}
                        {% if dernierTraitement and dernierTraitement.status == 'Traité' %}
                            <span class="status-badge success"><i class="fas fa-check-circle"></i> Traité</span>
                        {% elseif dernierTraitement and dernierTraitement.status == 'Refusé' %}
                            <span class="status-badge danger"><i class="fas fa-times-circle"></i> Refusé</span>
                        {% else %}
                            <span class="status-badge warning"><i class="fas fa-clock"></i> En cours de traitement</span>
                        {% endif %}
                    </div>
                </div>

                <div class="info-item">
                    <div class="info-label">
                        <i class="fas fa-comments"></i>
                        <span class="text-label">Commentaire Admin :</span>
                    </div>
                    <div class="info-content">
                        {% if dernierTraitement and dernierTraitement.commentaire %}
                            {{ dernierTraitement.commentaire }}
                        {% else %}
                            <em class="text-muted">Aucun commentaire</em>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>

        <div class="card-footer">
            <a href="{{ path('app_demande_index') }}" class="custom-btn btn-back">
                <i class="fas fa-arrow-left"></i> Retour à la liste
            </a>
            <a href="{{ path('app_demande_edit', {'id': demande.id}) }}" class="custom-btn btn-edit">
                <i class="fas fa-edit"></i> Modifier
            </a>
        </div>
    </div>
</div>
{% endblock %}

{% block stylesheets %}
{{ parent() }}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
<style>
    .title-container {
        text-align: center;
        margin-bottom: 40px;
    }

    .main-title {
        color: #333;
        font-size: 2.5rem;
        font-weight: 600;
        margin: 0;
        padding: 0;
        font-family: Arial, sans-serif;
    }

    .custom-card {
        background: #ffffff;
        border-radius: 15px;
        box-shadow: 0 8px 30px rgba(0, 0, 0, 0.1);
        border: none;
        margin: 0 auto;
        max-width: 800px;
        overflow: hidden;
    }

    .type-badge {
        display: inline-block;
        background: #2C5E1A;
        color: white;
        padding: 8px 15px;
        border-radius: 20px;
        font-size: 1rem;
        margin-bottom: 20px;
    }

    .info-container {
        display: flex;
        flex-direction: column;
        gap: 20px;
    }

    .info-item {
        display: flex;
        align-items: flex-start;
        padding: 15px;
        background: #f8f9fa;
        border-radius: 10px;
        transition: all 0.3s ease;
    }

    .info-item:hover {
        background: #f0f2f5;
        transform: translateX(5px);
    }

    .info-label {
        flex: 0 0 200px;
        display: flex;
        align-items: center;
        gap: 10px;
        color: #2C5E1A;
        font-weight: bold;
    }

    .info-label i {
        width: 20px;
        text-align: center;
        color: #2C5E1A;
    }

    .info-content {
        flex: 1;
        padding-left: 15px;
    }

    .status-badge {
        display: inline-flex;
        align-items: center;
        gap: 5px;
        padding: 8px 12px;
        border-radius: 20px;
        font-weight: 500;
    }

    .status-badge.success {
        background-color: #d4edda;
        color: #155724;
    }

    .status-badge.danger {
        background-color: #f8d7da;
        color: #721c24;
    }

    .status-badge.warning {
        background-color: #fff3cd;
        color: #856404;
    }

    .card-footer {
        background: white;
        border-top: 1px solid #eee;
        padding: 20px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .custom-btn {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 10px 25px;
        border-radius: 25px;
        text-decoration: none;
        transition: all 0.3s ease;
        border: none;
        font-size: 16px;
        box-shadow: 0 2px 5px rgba(0,0,0,0.1);
    }

    .btn-back {
        background: linear-gradient(145deg, #1a7718, #2C5E1A);
        color: white;
    }

    .btn-back:hover {
        background: linear-gradient(145deg, #2C5E1A, #1a7718);
        transform: translateY(-2px);
        color: white;
        text-decoration: none;
    }

    .btn-edit {
        background: linear-gradient(145deg, #2C5E1A, #1a7718);
        color: white;
    }

    .btn-edit:hover {
        background: linear-gradient(145deg, #1a7718, #2C5E1A);
        transform: translateY(-2px);
        color: white;
        text-decoration: none;
    }

    .text-muted {
        color: #6c757d !important;
        font-style: italic;
    }
</style>
{% endblock %}
