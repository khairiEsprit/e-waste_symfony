{% extends 'front/base.html.twig' %}

{% block title %}Nouvelle Demande{% endblock %}

{% block body %}
<div class="full-page-bg"></div>
<section class="content-wrapper py-5">
<div class="container mb-5 mt-4">
    <div class="title-container">
        <h1 class="section-title text-white animate-fade-in">Créer une Nouvelle Demande</h1>
    </div>

    <div class="card-custom animate-slide-up" style="border: 1px solid #000; margin-bottom: 2rem;">
        <div class="card-header" style="background: linear-gradient(145deg, var(--primary-medium), var(--primary-dark)); color: white;">
            <h5 class="card-title mb-0">Formulaire de demande</h5>
        </div>
        <div class="card-body">
            {{ include('front/demande/_form.html.twig', {'button_label': 'Créer'}) }}
        </div>
    </div>
</div>
</section>
{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    /* Form styling */
    .form-group {
        margin-bottom: 1.5rem;
    }

    .form-label {
        color: var(--primary-dark);
        font-weight: 600;
        margin-bottom: 0.75rem;
        font-size: 1rem;
    }

    .form-control {
        border-radius: var(--radius-md);
        border: 1px solid #e0e0e0;
        padding: 12px 15px;
        font-size: 1rem;
        transition: var(--transition-normal);
        background-color: var(--light);
    }

    .form-control:focus {
        border-color: var(--primary-medium);
        box-shadow: 0 0 0 0.2rem rgba(0, 105, 62, 0.15);
        background-color: white;
    }

    .form-control::placeholder {
        color: var(--text-light);
        opacity: 0.7;
    }

    textarea.form-control {
        min-height: 120px;
        resize: vertical;
    }

    /* Input group styling */
    .input-group {
        position: relative;
        display: flex;
        flex-wrap: wrap;
        align-items: stretch;
        width: 100%;
    }

    .input-group-text {
        display: flex;
        align-items: center;
        padding: 0.5rem 1rem;
        font-size: 1rem;
        font-weight: 400;
        color: var(--primary-medium);
        text-align: center;
        white-space: nowrap;
        background-color: var(--light);
        border: 1px solid #e0e0e0;
        border-radius: var(--radius-md);
        border-top-right-radius: 0;
        border-bottom-right-radius: 0;
    }

    .input-group > .form-control {
        position: relative;
        flex: 1 1 auto;
        width: 1%;
        min-width: 0;
        border-top-left-radius: 0;
        border-bottom-left-radius: 0;
    }

    /* Custom button styling */
    .custom-btn {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
        padding: 0.6rem 1.5rem;
        border-radius: var(--radius-pill);
        text-decoration: none;
        transition: var(--transition-normal);
        border: none;
        font-size: 1rem;
        font-weight: 500;
        box-shadow: var(--shadow-sm);
        cursor: pointer;
        background: var(--primary-medium);
        color: white;
    }

    .custom-btn:hover {
        background: var(--primary-dark);
        color: white;
        transform: translateY(-3px);
        box-shadow: var(--shadow-md);
    }

    .btn-back {
        background: var(--primary-light);
        color: white;
    }

    .btn-back:hover {
        background: var(--primary-dark);
        transform: translateY(-2px);
        box-shadow: var(--shadow-md);
        color: white;
        text-decoration: none;
    }

    .btn-edit {
        background: var(--primary-medium);
        color: white;
    }

    .btn-edit:hover {
        background: var(--primary-dark);
        transform: translateY(-2px);
        box-shadow: var(--shadow-md);
        color: white;
        text-decoration: none;
    }

    /* Form validation styling */
    .is-invalid {
        border-color: var(--danger);
    }

    .invalid-feedback {
        color: var(--danger);
        font-size: 0.875rem;
        margin-top: 0.5rem;
    }

    /* Animation for the form */
    .card-custom.animate-slide-up {
        animation-duration: 0.6s;
    }

    @media (max-width: 768px) {
        .card-body {
            padding: 1.5rem;
        }

        .form-control {
            padding: 10px 12px;
        }
    }
</style>
{% endblock %}
