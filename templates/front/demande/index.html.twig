{% extends 'front/base.html.twig' %}

{% block title %}Liste des Demandes{% endblock %}

{% block body %}
<br>
<br>
<div class="container mt-5">
    <div class="title-container">
        <h1 class="main-title">Liste des Demandes</h1>
    </div>

    <div class="search-container mb-4">
        <div class="input-group">
            <span class="input-group-text">
                <i class="fas fa-search"></i>
            </span>
            <input type="text" id="searchInput" class="form-control" placeholder="Rechercher une demande...">
        </div>
    </div>

    <div class="d-flex justify-content-end mb-4">
        <a href="{{ path('app_demande_new') }}" class="custom-btn btn-edit">
            <i class="fas fa-plus-circle"></i> Nouvelle demande
        </a>
    </div>

    {% if demandes is empty %}
        <div class="alert alert-info text-center">Aucune demande trouvée.</div>
    {% else %}
        <div class="row row-cols-1 row-cols-md-3 g-4 justify-content-center" id="demandesContainer">
            {% for demande in demandes %}
                {% set dernierTraitement = demande.traitements|last %}
                <div class="col demande-card" data-search="{{ demande.type|lower }} {{ demande.adresse|lower }} {{ demande.emailUtilisateur|lower }} {{ demande.message|lower }}">
                    <div class="card custom-card">
                        <div class="card-body">
                            <h5 class="type-badge">{{ demande.type }}</h5>
                            <div class="info-container">
                                <div class="info-item">
                                    <div class="info-label">
                                        <i class="fas fa-map-marker-alt"></i>
                                        <span>Adresse</span>
                                    </div>
                                    <div class="info-content">{{ demande.adresse }}</div>
                                </div>
                                
                                <div class="info-item">
                                    <div class="info-label">
                                        <i class="fas fa-envelope"></i>
                                        <span>Email</span>
                                    </div>
                                    <div class="info-content">{{ demande.emailUtilisateur }}</div>
                                </div>

                                <div class="info-item">
                                    <div class="info-label">
                                        <i class="fas fa-comment-alt"></i>
                                        <span>Message</span>
                                    </div>
                                    <div class="info-content">{{ demande.message }}</div>
                                </div>

                                <div class="info-item">
                                    <div class="info-label">
                                        <i class="fas fa-info-circle"></i>
                                        <span>État</span>
                                    </div>
                                    <div class="info-content">
                                        {% if dernierTraitement and dernierTraitement.status == 'Traité' %}
                                            <span class="status-badge success"><i class="fas fa-check-circle"></i> Traité</span>
                                        {% elseif dernierTraitement and dernierTraitement.status == 'Refusé' %}
                                            <span class="status-badge danger"><i class="fas fa-times-circle"></i> Refusé</span>
                                        {% else %}
                                            <span class="status-badge warning"><i class="fas fa-clock"></i> En cours de traitement</span>
                                        {% endif %}
                                    </div>
                                </div>

                                {% if dernierTraitement and dernierTraitement.commentaire %}
                                    <div class="info-item">
                                        <div class="info-label">
                                            <i class="fas fa-comments"></i>
                                            <span>Commentaire Admin</span>
                                        </div>
                                        <div class="info-content">{{ dernierTraitement.commentaire }}</div>
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                        <div class="card-footer">
                            <a href="{{ path('app_demande_show', {'id': demande.id}) }}" class="custom-btn btn-back">
                                <i class="fas fa-eye"></i> Voir
                            </a>
                            <a href="{{ path('app_demande_edit', {'id': demande.id}) }}" class="custom-btn btn-edit">
                                <i class="fas fa-edit"></i> Modifier
                            </a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}
</div>
{% endblock %}

{% block stylesheets %}
{{ parent() }}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
<style>
    .title-container {
        text-align: center;
        margin-bottom: 40px;
    }

    .main-title {
        color: #333;
        font-size: 2.5rem;
        font-weight: 600;
        margin: 0;
        padding: 0;
        font-family: Arial, sans-serif;
    }

    .search-container {
        max-width: 600px;
        margin: 0 auto 30px;
    }

    .input-group-text {
        background: linear-gradient(145deg, #2C5E1A, #1a7718);
        border: none;
        color: white;
    }

    .input-group .form-control {
        border-radius: 10px;
        border: 1px solid #e0e0e0;
        padding: 0.75rem;
    }

    .input-group .form-control:focus {
        border-color: #2C5E1A;
        box-shadow: 0 0 0 0.2rem rgba(44, 94, 26, 0.25);
    }

    .custom-card {
        background: #ffffff;
        border-radius: 15px;
        box-shadow: 0 8px 30px rgba(0, 0, 0, 0.1);
        border: none;
        overflow: hidden;
        height: 100%;
        max-width: 400px;
        margin: 0 auto;
    }

    .type-badge {
        display: inline-block;
        background: linear-gradient(145deg, #2C5E1A, #000000);
        color: white;
        padding: 8px 15px;
        border-radius: 20px;
        font-size: 1rem;
        margin-bottom: 20px;
        transition: all 0.3s ease;
    }

    .type-badge:hover {
        background: linear-gradient(145deg, #000000, #2C5E1A);
        transform: translateY(-2px);
    }

    .info-container {
        display: flex;
        flex-direction: column;
        gap: 15px;
    }

    .info-item {
        display: flex;
        flex-direction: column;
        gap: 5px;
    }

    .info-label {
        display: flex;
        align-items: center;
        gap: 8px;
        color: #2C5E1A;
        font-weight: 600;
    }

    .info-content {
        color: #666;
        padding-left: 25px;
    }

    .card-footer {
        display: flex;
        justify-content: space-between;
        padding: 15px;
        background: #f8f9fa;
        border-top: 1px solid #eee;
    }

    .custom-btn {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 8px 15px;
        border-radius: 20px;
        text-decoration: none;
        transition: all 0.3s ease;
        border: none;
        font-size: 14px;
        box-shadow: 0 2px 5px rgba(0,0,0,0.1);
    }

    .btn-back {
        background: linear-gradient(145deg, #2C5E1A, #1a7718);
        color: white;
    }

    .btn-edit {
        background: linear-gradient(145deg, #1a7718, #2C5E1A);
        color: white;
    }

    .custom-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(0,0,0,0.2);
    }

    .status-badge {
        display: inline-flex;
        align-items: center;
        gap: 5px;
        padding: 6px 12px;
        border-radius: 20px;
        font-weight: 500;
    }

    .status-badge.success {
        background-color: #d4edda;
        color: #155724;
    }

    .status-badge.danger {
        background-color: #f8d7da;
        color: #721c24;
    }

    .status-badge.warning {
        background-color: #fff3cd;
        color: #856404;
    }

    /* Adjust card layout for better responsiveness */
    @media (min-width: 768px) {
        .row-cols-md-3 > * {
            flex: 0 0 33.333333%;
            max-width: 33.333333%;
        }
    }

    /* Ensure content doesn't overflow */
    .info-content {
        word-break: break-word;
    }
</style>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script>
document.addEventListener('DOMContentLoaded', function() {
    const searchInput = document.getElementById('searchInput');
    const demandesContainer = document.getElementById('demandesContainer');
    const demandeCards = document.querySelectorAll('.demande-card');

    searchInput.addEventListener('input', function() {
        const searchTerm = this.value.toLowerCase();
        
        demandeCards.forEach(card => {
            const searchableText = card.getAttribute('data-search');
            if (searchableText.includes(searchTerm)) {
                card.style.display = '';
            } else {
                card.style.display = 'none';
            }
        });

        // Check if any cards are visible
        const visibleCards = Array.from(demandesContainer.querySelectorAll('.demande-card'))
            .filter(card => card.style.display !== 'none');

        if (visibleCards.length === 0) {
            if (!document.querySelector('.no-results-message')) {
                const noResults = document.createElement('div');
                noResults.className = 'alert alert-info text-center no-results-message';
                noResults.textContent = 'Aucune demande ne correspond à votre recherche.';
                demandesContainer.appendChild(noResults);
            }
        } else {
            const noResults = document.querySelector('.no-results-message');
            if (noResults) {
                noResults.remove();
            }
        }
    });
});
</script>
{% endblock %}
