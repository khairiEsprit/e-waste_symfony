{% extends 'front/base.html.twig' %}

{% block title %}Our Centres | ASD{% endblock %}

{% block body %}
<!-- Full-page background that extends under navbar -->
<div class="full-page-bg"></div>
<div class="content-wrapper">
  <!-- ======= Centres Header Section ======= -->
  <div class="container pt-5" data-aos="fade-up">
    <div class="section-title">
      <h2 class="text-white">Our Centres</h2>
      <p class="text-white">Discover our network of professional centres across the country, each offering top-quality services and facilities.</p>
    </div>

  <!-- ======= Centres Grid Section ======= -->
  <div class="py-4" data-aos="fade-up">
    <div class="row">
      {% for centre in centres %}
        <div class="col-sm-12 col-md-6 col-lg-4 mb-4">
                  <a href="{{ path('app_centre_detailsFront', {'id': centre.id}) }}" class="card-link">

          <div class="card-custom text-white centre-card" style="background-image:url('{{ asset('assets/front/assets/img/centres/centre1.jpeg') }}');">
            <img class="card-img d-none" src="{{ asset('assets/front/assets/img/centres/centre1.jpeg') }}" alt="{{ centre.nom }}">
            <div class="card-img-overlay d-flex flex-column">
              <div class="card-body">
                <h4 class="card-title mt-0">{{ centre.nom }}</h4>
                <p><i class="bi bi-geo-alt"></i> Coordinates: {{ centre.longitude }}, {{ centre.altitude }}</p>
                <p><i class="bi bi-telephone"></i> {{ centre.telephone|slice(0, 2) }} {{ centre.telephone|slice(2, 2) }} {{ centre.telephone|slice(4, 2) }} {{ centre.telephone|slice(6, 2) }}</p>
              </div>
              <div class="card-footer">
                <a href="{{ path('app_centre_detailsFront', {'id': centre.id}) }}" class="btn-custom">View Details</a>
              </div>
            </div>
          </div>
        </div>
      {% else %}
        <div class="col-12">
          <div class="no-centres text-center py-5">
            <i class="bi bi-building-exclamation" style="font-size: 3rem; color: var(--primary-medium);"></i>
            <h4 class="mt-3">No centres available at the moment</h4>
            <p>Please check back later or contact our support team.</p>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
  </div>
</div><!-- End content-wrapper -->

<style>
/* Using our unified theme variables */

.centre-card {
  border: none;
  transition: all 500ms cubic-bezier(0.19, 1, 0.22, 1);
  overflow: hidden;
  border-radius: var(--radius-lg);
  min-height: 350px;
  box-shadow: var(--shadow-md);
  background-size: cover;
  background-position: center;
  position: relative;
}

.card-title {
  font-weight: 700;
  color: white;
  text-shadow: 1px 1px 3px rgba(0,0,0,0.5);
  transition: var(--transition-normal);
}

.centre-card:hover .card-title {
  color: white;
  text-shadow: 2px 2px 4px rgba(0,0,0,0.7);
}

.centre-card:before {
  content: '';
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background: inherit;
  filter: grayscale(80%);
  transition: var(--transition-normal);
}

.centre-card:hover {
  transform: translateY(-5px);
  box-shadow: var(--shadow-lg);
  background-size: 110%;
}

.centre-card:hover:before {
  filter: grayscale(0%);
}

.card-img-overlay {
  transition: var(--transition-normal);
  background: linear-gradient(0deg, rgba(var(--primary-dark), 0.7) 0%, rgba(var(--primary-medium), 0.4) 100%);
  z-index: 1;
}

.card-footer {
  background: transparent;
  border-top: none;
  position: relative;
  z-index: 2;
}

.card-body {
  transition: var(--transition-normal);
  position: relative;
  z-index: 2;
}

.centre-card:hover .card-body {
  transform: translateY(-10px);
}

.centre-card {
  cursor: pointer;
}

@media (max-width: 768px) {
  .card {
    min-height: 300px;
  }
}

@media (max-width: 420px) {
  .card {
    min-height: 250px;
  }
}
</style>
{% endblock %}