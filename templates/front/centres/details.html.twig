{% extends 'front/detail_base.html.twig' %}

{% block title %}{{ centre.nom }} | ASD{% endblock %}

{% set parent_route = 'app_centreFront' %}
{% set parent_label = 'Centres' %}
{% set current_item = centre.nom %}

{% block detail_content %}
    <div class="row" data-aos="fade-up">
        <div class="col-lg-8">
            <div class="detail-card">
                <div class="detail-header">
                    <h2>{{ centre.nom }}</h2>
                    <p><i class="bi bi-geo-alt-fill"></i> Coordinates: {{ centre.longitude }}, {{ centre.altitude }}</p>
                </div>

                <div class="detail-body">
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="info-box">
                                <div class="info-box-icon">
                                    <i class="bi bi-telephone"></i>
                                </div>
                                <h4>Phone</h4>
                                <p style="color:black;"her>{{ centre.telephone|slice(0, 2) }} {{ centre.telephone|slice(2, 2) }} {{ centre.telephone|slice(4, 2) }} {{ centre.telephone|slice(6, 2) }}</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="info-box">
                                <div class="info-box-icon">
                                    <i class="bi bi-envelope"></i>
                                </div>
                                <h4>Email</h4>
                                <p style="color:black;">{{ centre.email }}</p>
                            </div>
                        </div>
                    </div>

                    <div class="map-container">
                        <iframe
                            width="100%"
                            height="400"
                            src="https://maps.google.com/maps?q={{ centre.altitude }},{{ centre.longitude }}&hl=es&z=14&amp;output=embed">
                        </iframe>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="sidebar-widget">
                <h4>Quick Contact</h4>
                <form class="contact-form">
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Your Name">
                    </div>
                    <div class="form-group">
                        <input type="email" class="form-control" placeholder="Your Email">
                    </div>
                    <div class="form-group">
                        <textarea class="form-control" rows="3" placeholder="Your Message"></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Send Message</button>
                </form>
            </div>

            <div class="sidebar-widget">
                <h4>Opening Hours</h4>
                <ul class="opening-hours">
                    <li>Monday - Friday <span>8:00 - 18:00</span></li>
                    <li>Saturday <span>9:00 - 16:00</span></li>
                    <li>Sunday <span>Closed</span></li>
                </ul>
            </div>
        </div>
    </div>
{% endblock %}
