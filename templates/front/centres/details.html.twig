{% extends 'front/base.html.twig' %}

{% block title %}{{ centre.nom }} | ASD{% endblock %}

{% block body %}
<!-- ======= Breadcrumbs ======= -->
<section id="breadcrumbs" class="breadcrumbs">
  <div class="container">
    <ol>
      <li><a href="{{ path('front_home') }}">Home</a></li>
      <li><a href="{{ path('app_centreFront') }}">Centres</a></li>
      <li>{{ centre.nom }}</li>
    </ol>
    <h2>{{ centre.nom }}</h2>
  </div>
</section><!-- End Breadcrumbs -->

<!-- ======= Centre Details Section ======= -->
<section id="centre-details" class="centre-details">
  <div class="container" data-aos="fade-up">
    <div class="row">
      <div class="col-lg-8">
        <div class="centre-details-content">
          <div class="details-header">
            <h3>{{ centre.nom }}</h3>
            <div class="location-badge">
              <i class="bi bi-geo-alt-fill" style="color: #228B22;"></i> 
              <span>Coordinates: {{ centre.longitude }}, {{ centre.altitude }}</span>
            </div>
          </div>
          
          <div class="details-info mt-4">
            <div class="row">
              <div class="col-md-6">
                <div class="info-box">
                  <i class="bi bi-telephone" style="color: #228B22;"></i>
                  <h4>Phone</h4>
                  <p>{{ centre.telephone|slice(0, 2) }} {{ centre.telephone|slice(2, 2) }} {{ centre.telephone|slice(4, 2) }} {{ centre.telephone|slice(6, 2) }}</p>
                </div>
              </div>
              <div class="col-md-6">
                <div class="info-box">
                  <i class="bi bi-envelope" style="color: #228B22;"></i>
                  <h4>Email</h4>
                  <p>{{ centre.email }}</p>
                </div>
              </div>
            </div>
          </div>
          
          <div class="details-map mt-4">
            <div class="map-container">
              <iframe 
                width="100%" 
                height="400" 
                frameborder="0" 
                scrolling="no" 
                marginheight="0" 
                marginwidth="0" 
                src="https://maps.google.com/maps?q={{ centre.altitude }},{{ centre.longitude }}&hl=es&z=14&amp;output=embed">
              </iframe>
            </div>
          </div>
        </div>
      </div>
      
      <div class="col-lg-4">
        <div class="sidebar">
          <div class="sidebar-widget">
            <h4>Quick Contact</h4>
            <form>
              <div class="form-group">
                <input type="text" class="form-control" placeholder="Your Name">
              </div>
              <div class="form-group">
                <input type="email" class="form-control" placeholder="Your Email">
              </div>
              <div class="form-group">
                <textarea class="form-control" rows="3" placeholder="Your Message"></textarea>
              </div>
              <button type="submit" class="btn btn-primary btn-block">Send Message</button>
            </form>
          </div>
          
          <div class="sidebar-widget">
            <h4>Opening Hours</h4>
            <ul class="opening-hours">
              <li>Monday - Friday <span>8:00 - 18:00</span></li>
              <li>Saturday <span>9:00 - 16:00</span></li>
              <li>Sunday <span>Closed</span></li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</section><!-- End Centre Details Section -->

<style>
/* Style pour les icônes */
.bi-geo-alt-fill, 
.bi-telephone, 
.bi-envelope {
  color: #228B22; /* Couleur verte */
  font-size: 1.2rem;
  margin-right: 8px;
}

/* Style optionnel pour les boîtes d'information */
.info-box {
  padding: 15px;
  border-radius: 8px;
  background-color: #f8f9fa;
  transition: all 0.3s ease;
}

.info-box:hover {
  transform: translateY(-5px);
  box-shadow: 0 5px 15px rgba(0,0,0,0.1);
}

.info-box h4 {
  color: #228B22;
  margin-top: 10px;
}

.location-badge {
  display: flex;
  align-items: center;
  color: #228B22;
  font-weight: 500;
}
</style>
{% endblock %}