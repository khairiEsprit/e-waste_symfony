{% extends 'front/base.html.twig' %}

{% block title %}New Participation{% endblock %}

{% block body %}
    <div class="container py-5" style="transform: translateY(30px);">
        <div class="row justify-content-center align-items-stretch gx-4"> <!-- Alignement parfait -->
            <!-- Colonne formulaire (7 colonnes) -->
            <div class="col-lg-7 mb-4 mb-lg-0 d-flex"> <!-- d-flex pour alignement -->
                <div class="card shadow border-0 w-100"> <!-- w-100 pour largeur complète -->
                    <div class="card-header bg-success text-white py-3">
                        <h1 class="h4 mb-0">Create New Participation</h1>
                    </div>
                    <div class="card-body">
                        {{ include('participation/_form.html.twig') }}
                    </div>
                    <div class="card-footer bg-light py-3">
                        <a href="{{ path('app_participation_index') }}" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left mr-2"></i> Back to list
                        </a>
                    </div>
                </div>
            </div>

            <!-- Colonne image (5 colonnes) - Design amélioré -->
            <div class="col-lg-5 d-flex"> <!-- d-flex pour alignement -->
                <div class="card shadow border-0 w-100" style="border-left: 4px solid #29AB87;">
                    <div class="position-relative h-100">
                        <!-- Image responsive -->
                        <img src="{{ asset('assets/front/assets/img/participation-image2.jpg') }}"
                             class="img-fluid h-100 w-100"
                             style="object-fit: cover; min-height: 300px;"
                             alt="Éco-participation">

                        <!-- Overlay moderne -->
                        <div class="position-absolute bottom-0 start-0 end-0 p-4"
                             style="background: linear-gradient(to top, rgba(0,105,62,0.9), transparent);">

                            <div class="d-flex align-items-center mb-3">
                                <div class="bg-white rounded-circle p-2 me-3 flex-shrink-0">
                                    <i class="fas fa-leaf text-success"></i>
                                </div>
                                <h3 class="text-white mb-0 h5">Engagement Écologique</h3>
                            </div>

                            <div class="ps-5"> <!-- Décalage pour aligner avec l'icône -->
                                <div class="d-flex align-items-center mb-2">
                                    <i class="fas fa-check-circle text-white me-2 small"></i>
                                    <p class="text-white small mb-0">Suivi temps réel de votre impact</p>
                                </div>

                                <div class="d-flex align-items-center mb-2">
                                    <i class="fas fa-check-circle text-white me-2 small"></i>
                                    <p class="text-white small mb-0">Optimisation des collectes</p>
                                </div>

                                <div class="d-flex align-items-center">
                                    <i class="fas fa-check-circle text-white me-2 small"></i>
                                    <p class="text-white small mb-0">Communauté active</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <style>
        /* Animation harmonieuse */
        .card {
            transition: all 0.3s ease;
        }
        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.15) !important;
        }

        /* Effet sur les icônes */
        .fa-check-circle {
            transition: transform 0.3s ease;
        }
        .card:hover .fa-check-circle {
            transform: scale(1.2);
            color: #ACE1AF !important;
        }

        /* Adaptation responsive */
        @media (max-width: 992px) {
            .card {
                margin-bottom: 20px;
            }
        }
    </style>
{% endblock %}