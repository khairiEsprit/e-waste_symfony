{% extends 'front/base.html.twig' %}

{% block title %}Détails Participation{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"/>
    <style>
        /* ANIMATIONS PERSONNALISÉES */
        @keyframes pulse-glow {
            0% { box-shadow: 0 0 0 0 rgba(41, 171, 135, 0.7); }
            70% { box-shadow: 0 0 0 12px rgba(41, 171, 135, 0); }
            100% { box-shadow: 0 0 0 0 rgba(41, 171, 135, 0); }
        }

        @keyframes float {
            0%, 100% { transform: translateY(0); }
            50% { transform: translateY(-5px); }
        }

        /* STYLE DES BOUTONS */
        .magic-btn {
            position: relative;
            overflow: hidden;
            border: none;
            font-weight: 600;
            letter-spacing: 1px;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            transition: all 0.5s ease;
            border-radius: 50px;
            padding: 10px 24px;
            font-size: 14px;
            margin: 0 5px;
        }

        /* BOUTON RETOUR */
        .back-btn {
            background: linear-gradient(145deg, #6c757d, #495057);
            color: white;
            box-shadow: 0 4px 15px rgba(108, 117, 125, 0.3);
        }

        .back-btn:hover {
            animation: pulse-glow 1.5s infinite;
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(108, 117, 125, 0.4);
        }

        /* BOUTON MODIFIER */
        .edit-btn {
            background: linear-gradient(145deg, #29AB87, #218838);
            color: white;
            box-shadow: 0 4px 20px rgba(41, 171, 135, 0.35);
        }

        .edit-btn:hover {
            animation: pulse-glow 1.5s infinite;
            transform: translateY(-3px);
            box-shadow: 0 8px 30px rgba(41, 171, 135, 0.5);
        }

        /* BOUTON SUPPRIMER */
        .delete-btn {
            background: linear-gradient(145deg, #dc3545, #c82333);
            color: white;
            box-shadow: 0 4px 20px rgba(220, 53, 69, 0.3);
        }

        .delete-btn:hover {
            animation: pulse-glow 1.5s infinite;
            transform: translateY(-3px);
            box-shadow: 0 8px 30px rgba(220, 53, 69, 0.4);
        }

        /* EFFET DE LUMIÈRE */
        .magic-btn::after {
            content: '';
            position: absolute;
            top: -50%;
            left: -60%;
            width: 200%;
            height: 200%;
            background: rgba(255, 255, 255, 0.13);
            transform: rotate(45deg);
            transition: all 0.6s ease;
            pointer-events: none;
        }

        .magic-btn:hover::after {
            left: 100%;
            top: 100%;
        }

        /* ICÔNES ANIMÉES */
        .btn-icon {
            margin-right: 8px;
            transition: all 0.4s cubic-bezier(0.68, -0.55, 0.265, 1.55);
        }

        .back-btn:hover .btn-icon {
            transform: rotate(-20deg) scale(1.3);
        }

        .edit-btn:hover .btn-icon {
            transform: rotate(10deg) scale(1.3);
        }

        .delete-btn:hover .btn-icon {
            transform: rotate(15deg) scale(1.3);
        }

        /* EFFET DE VAGUE */
        .ripple-wave {
            position: absolute;
            border-radius: 50%;
            background: rgba(255, 255, 255, 0.7);
            transform: scale(0);
            animation: ripple 0.6s linear;
            pointer-events: none;
        }

        @keyframes ripple {
            to {
                transform: scale(4);
                opacity: 0;
            }
        }

        /* CARTE PARTICIPANT */
        .participant-card {
            background: #FEFEFA;
            border-radius: 12px;
            box-shadow: 0 10px 30px rgba(0, 105, 62, 0.1);
            overflow: hidden;
            margin-bottom: 30px;
            transition: all 0.3s ease;
        }

        .participant-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 35px rgba(0, 105, 62, 0.15);
        }

        .card-header {
            background: linear-gradient(135deg, #013220 0%, #00693E 100%);
            padding: 15px 25px;
            display: flex;
            align-items: center;
            color: #FEFEFA;
        }

        .info-grid {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 0;
        }

        .info-column {
            padding: 25px;
        }

        .info-column:first-child {
            border-right: 1px dashed #ACE1AF;
        }

        .info-item {
            margin-bottom: 20px;
            transition: all 0.3s;
            padding: 10px;
            border-radius: 6px;
        }

        .info-item:hover {
            background: rgba(169, 225, 175, 0.1);
            transform: translateX(5px);
        }

        .info-label {
            color: #00693E;
            font-size: 0.85rem;
            font-weight: 600;
            margin-bottom: 5px;
            letter-spacing: 0.5px;
        }

        .info-value {
            font-size: 1.1rem;
            color: #333;
            font-weight: 500;
        }

        /* ZONE DE SUPPRESSION */
        .delete-section {
            background: #FFF8F8;
            border-radius: 12px;
            border: 1px solid #FFEBEE;
            padding: 25px;
            margin-bottom: 30px;
            text-align: center;
            box-shadow: 0 5px 25px rgba(0, 105, 62, 0.08);
            border-top: 4px solid #d9534f;
        }

        .delete-title {
            color: #D32F2F;
            font-size: 1.3rem;
            margin-bottom: 15px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 600;
        }

        .delete-warning {
            color: #666;
            margin-bottom: 20px;
            line-height: 1.5;
        }

        /* LIENS UTILES */
        .useful-links {
            margin-top: 40px;
        }

        .links-title {
            color: #013220;
            font-size: 1.4rem;
            margin-bottom: 20px;
            display: flex;
            align-items: center;
        }

        .links-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 20px;
        }

        .link-card {
            background: #FEFEFA;
            border-radius: 8px;
            padding: 20px;
            text-decoration: none;
            box-shadow: 0 3px 15px rgba(0, 105, 62, 0.05);
            transition: all 0.3s;
            border-left: 4px solid #29AB87;
        }

        .link-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(0, 105, 62, 0.12);
        }

        .link-title {
            color: #00693E;
            font-weight: 600;
            margin-bottom: 10px;
            display: flex;
            align-items: center;
        }

        .link-desc {
            color: #666;
            font-size: 0.9rem;
        }

        /* RESPONSIVE */
        @media (max-width: 768px) {
            .info-grid {
                grid-template-columns: 1fr;
            }

            .info-column:first-child {
                border-right: none;
                border-bottom: 1px dashed #ACE1AF;
            }

            .links-grid {
                grid-template-columns: 1fr;
            }
        }

        /* Custom SweetAlert2 Styling */
        .swal2-title-custom {
            color: #D32F2F !important;
            font-size: 1.5rem !important;
            font-weight: 600 !important;
            margin-bottom: 1rem !important;
        }

        .swal2-html-custom {
            padding: 0 1rem !important;
        }

        .btn-confirm-delete {
            background: linear-gradient(145deg, #dc3545, #c82333) !important;
            color: white !important;
            border: none !important;
            padding: 10px 24px !important;
            border-radius: 50px !important;
            font-weight: 600 !important;
            letter-spacing: 1px !important;
            display: inline-flex !important;
            align-items: center !important;
            justify-content: center !important;
            transition: all 0.3s ease !important;
            box-shadow: 0 4px 15px rgba(220, 53, 69, 0.3) !important;
        }

        .btn-confirm-delete:hover {
            transform: translateY(-3px) !important;
            box-shadow: 0 8px 25px rgba(220, 53, 69, 0.4) !important;
        }

        .btn-cancel-delete {
            background: linear-gradient(145deg, #6c757d, #495057) !important;
            color: white !important;
            border: none !important;
            padding: 10px 24px !important;
            border-radius: 50px !important;
            font-weight: 600 !important;
            letter-spacing: 1px !important;
            display: inline-flex !important;
            align-items: center !important;
            justify-content: center !important;
            transition: all 0.3s ease !important;
            box-shadow: 0 4px 15px rgba(108, 117, 125, 0.3) !important;
        }

        .btn-cancel-delete:hover {
            transform: translateY(-3px) !important;
            box-shadow: 0 8px 25px rgba(108, 117, 125, 0.4) !important;
        }

        .swal2-close {
            color: #666 !important;
            font-size: 1.5rem !important;
            transition: all 0.3s ease !important;
        }

        .swal2-close:hover {
            color: #D32F2F !important;
            transform: rotate(90deg) !important;
        }

        .swal2-popup {
            border-radius: 12px !important;
            box-shadow: 0 10px 30px rgba(0, 105, 62, 0.1) !important;
        }
    </style>
{% endblock %}

