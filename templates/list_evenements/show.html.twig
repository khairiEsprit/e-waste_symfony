{% extends 'front/base.html.twig' %}

{% block title %}Détails de l'événement - {{ event.title }}{% endblock %}

{% block body %}
    <div style="transform: translateY(70px); margin-bottom: 70px;">
        <div class="container py-5">
            {# Bouton de retour à la liste #}
            <a href="{{ path('app_front_event_list') }}" class="btn btn-outline-secondary mb-4">
                ← Retour aux événements
            </a>

            {# Carte de détail de l'événement #}
            <div class="card shadow-sm">
                <div class="card-body">
                    <h1 class="card-title">{{ event.title }}</h1>

                    {# Date et heure #}
                    <div class="d-flex align-items-center mb-3">
                        <i class="far fa-calendar-alt me-2"></i>
                        <span class="text-muted">
                            {{ event.date|date('d/m/Y à H:i') }}
                        </span>
                    </div>

                    {# Description #}
                    <div class="mb-4">
                        <h5>Description :</h5>
                        <p class="card-text">{{ event.description }}</p>
                    </div>

                    {# Autres champs (ajustez selon votre entité Event) #}
                    {% if event.location %}
                        <div class="mb-3">
                            <h5>Lieu :</h5>
                            <p><i class="fas fa-map-marker-alt me-2"></i>{{ event.location }}</p>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}